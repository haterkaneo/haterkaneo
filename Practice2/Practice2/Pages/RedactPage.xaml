<Page x:Class="Practice2.Pages.RedactPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practice2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RedactPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Название"/>
            <ComboBox x:Name="CBRedactName"  SelectedValuePath="Name" DisplayMemberPath="Name" SelectionChanged="CBRedactName_SelectionChanged"></ComboBox>
            <TextBlock Text="Редкость"/>
            <ComboBox x:Name="CBRedactRarity" SelectedItem="{Binding Rarity}"  DisplayMemberPath="Name"></ComboBox>
            <TextBlock Text="Цена"/>
            <TextBox Text="{Binding Price}"/>
            <TextBlock Text="Класс"/>
            <ComboBox x:Name="CBRedactHeroClass" SelectedItem="{Binding HeroClass}" DisplayMemberPath="Name"></ComboBox>


            <Button x:Name="BRedactSave"
                Content="Сохранить"
                Click="BRedactSave_Click"/>
            <Button x:Name="BRedactCancel"
                Content="Отменить"
                Click="BRedactCancel_Click"/>
        </StackPanel>
    </Grid>
</Page>
