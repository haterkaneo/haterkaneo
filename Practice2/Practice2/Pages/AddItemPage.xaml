<Page x:Class="Practice2.Pages.AddItemPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practice2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddItemPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Название"/>
            <TextBox Text="{Binding Name}"/>
            <TextBlock Text="Редкость"/>
            <ComboBox x:Name="CBRarity"
                      DisplayMemberPath="Name"
                SelectedItem="{Binding Rarity}"/>
            <TextBlock Text="Класс"/>
            <ComboBox x:Name="CBHeroClass"
                      DisplayMemberPath="Name" 
                      SelectedItem="{Binding HeroClass}"/>
            <TextBlock Text="Цена"/>
            <TextBox Text="{Binding Price}"/>
            
            
            <Button x:Name="BSave"
                Content="Сохранить"
                Click="BSave_Click"/>
            <Button x:Name="BCancel"
                Content="Отменить"
                Click="BCancel_Click"/>
        </StackPanel>
    </Grid>
</Page>
